package ProjetoUNI3;

import com.sun.source.tree.NewClassTree;

import java.util.Scanner;
import java.util.ArrayList;

public class Cadastro {
    public static void main (String[] args){
        Scanner scan = new Scanner(System.in);
        ArrayList<Aluno> listDeAlunos = new ArrayList<>();
        int op = 0;
        do {
            System.out.println("##ESCOLHA UMA OPÇÃO##\n");
            System.out.println("1 - Cadastro de Aluno");
            System.out.println("2 - Sair \n");
            op = scan.nextInt();

            switch(op){
                case 1:
                    System.out.println("Seja bem vindo ao cadastramento de Alunos\n");
                    System.out.println("Seu nome: ");
                    String nome = scan.nextLine();
                    System.out.println("Sua idade: ");
                    int idade = scan.nextInt();
                    System.out.println("Seu sexo(genero)('M' para Masculino, 'F' para feminino, 'N' para não binario)");
                    char genero = scan.next().charAt(0);
                    scan.nextLine();
                    System.out.println("seu cpf: ");
                    int cpf = scan.nextInt();
                    System.out.println("data de seu nascimento: ");
                    int datanascimento = scan.nextInt();
                    System.out.println("digite sua matricula: ");
                    int matricula = scan.nextInt();
                    System.out.println("voce tem uma alergia?: ");
                    String alergico = scan.nextLine();
                    System.out.println("voce tem cardiopatia?: ");
                    String cardiopata = scan.nextLine();
                    System.out.println("de que cidade voce vem?: ");
                    String cidade = scan.nextLine();
                    System.out.println("qual e seu curso?: ");
                    String curso = scan.nextLine();
                    scan.nextLine();
                    System.out.println("RA: ");
                    String ra = scan.nextLine();
                    Aluno aluno = new Aluno(nome, idade, genero, cpf, datanascimento, matricula, alergico, cardiopata, cidade, curso, ra );

                case 2:
                    System.out.println("Adeus");
                    break;
            }
        } while(op != 2);
    }
    
}
